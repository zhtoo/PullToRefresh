<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/pager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="贷款个数最近7天统计"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pager_title_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="个数(个)"/>


        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pager_refreah_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1031每个月"/>

            <TextView
                android:id="@+id/pager_refreah_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近更新：今日"/>

        </LinearLayout>


    </LinearLayout>


    <com.zht.ptr.HstogramView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_hstogram"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        app:allTextSize="12sp"/>

</LinearLayout>